{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tauri-Focus",
  "version": "1.0.2",
  "identifier": "com.alexey.mekhanoshin.taurifocus",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Tauri Focus App",
        "fullscreen": false,
        "resizable": false,
        "center": true,
        "decorations": false,
        "width": 600,
        "height": 60,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "wix": {
        "language": ["en-US", "ru-RU"]
      },
      "nsis": {
        "languages": [ "English", "Russian"],
        "displayLanguageSelector": true
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
